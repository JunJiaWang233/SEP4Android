<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#258BC34A"
    android:orientation="vertical"
    tools:context="client.view.CurrentData"
    android:id="@+id/notFrameLayout">

    <TextView
        android:id="@+id/textViewCD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="23dp"
        android:text="Current Data"
        android:textColor="#17103E"
        android:textSize="23dp" />

    <TextView
        android:id="@+id/textSubTitleCD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="30dp"
        android:text="Current measurments of the greenhouse"
        android:textColor="#B4BAC3"
        android:textSize="15dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="#FFF"
        android:elevation="8dp"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_marginBottom="25dp">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="54dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/thermometer" />

        <TextView
            android:id="@+id/humidityTV"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:fontFamily="@font/capriola"
            android:paddingTop="13dp"
            android:text="Temperature: "
            android:textSize="24sp" />

        <TextView
            android:id="@+id/currentTemp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/quando"
            android:textSize="24dp" />

    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="#FFF"
        android:elevation="8dp"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_marginBottom="30dp">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="54dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/drop" />

        <TextView
            android:id="@+id/co2TV"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:fontFamily="@font/capriola"
            android:paddingTop="13dp"
            android:text="Humidity: "
            android:textSize="24sp" />

        <TextView
            android:id="@+id/currentHumidity"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/quando"
            android:textSize="24dp" />

    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="#FFF"
        android:elevation="8dp"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_marginBottom="30dp">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="54dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/thermometer" />

        <TextView
            android:id="@+id/coTV"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:fontFamily="@font/capriola"
            android:paddingTop="13dp"
            android:text="CO2: "
            android:textSize="24sp" />

        <TextView
            android:id="@+id/currentCo2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/quando"
            android:textSize="24dp" />

    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="#FFF"
        android:elevation="8dp"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_marginBottom="30dp">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="54dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/idea" />

        <TextView
            android:id="@+id/lightTV"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="11dp"
            android:layout_marginBottom="15dp"
            android:fontFamily="@font/capriola"
            android:paddingTop="13dp"
            android:text="Light: "
            android:textSize="24sp" />

        <Switch
            android:id="@+id/lightSwitch"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="50dp"
            android:layout_weight="1"
            android:paddingTop="30dp" />

    </LinearLayout>

</LinearLayout>



